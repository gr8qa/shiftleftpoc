pipeline {
    agent any

    parameters {
        booleanPram(defaultValue: false, description: 'Do SonarQube analysis', name: 'runSonarQube')
    }

    stages {
        stage('Build') {
            steps {
                bat 'yarn install'
                bat 'yarn build'
            }
        }

        stage('Run unit tests') {
            steps {
                bat 'yarn test'
                xunit([JUnit(excludesPattern: '', pattern: 'results/*.xml', stopProcessingIfError: true)])
            }
        }

        stage('Analyze SonarQube') {
            when {
                expression {
                    params.runSonarQube == true
                }
            }
            steps {
                echo "TBD"
            }
        }

        stage('Check quality gate') {
            when {
                expression {
                    params.runSonarQube == true
                }
            }
            steps {
                echo "TBD"
            }
        }
    }
}