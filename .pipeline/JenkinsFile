pipeline {
    agent any

    parameters {
        booleanParam(defaultValue: false, description: 'Do SonarQube analysis', name: 'runSonarQube')
        booleanParam(defaultValue: false, description: 'Check quality gate', name: 'checkQualityGate')
    }

    stages {
        stage('Build') {
            steps {
                bat 'yarn install'
                bat 'yarn build'
            }
        }

        stage('Run unit tests') {
            steps {
                bat 'yarn test'
                junit 'results/*.xml'
            }
        }

        stage('Analyze SonarQube') {
            when {
                expression {
                    params.runSonarQube == true
                }
            }
            steps {
                echo "TBD"
            }
        }

        stage('Check quality gate') {
            when {
                expression {
                    params.checkQualityGate == true
                }
            }
            steps {
                echo "TBD"
            }
        }
    }
}