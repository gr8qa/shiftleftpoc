pipeline {
    agent any

    parameters {
        booleanPram(defaultValue: false, description: 'Do SonarQube analysis', name: 'runSonarQube')
    }

    stages {
        stage('Build') {
            steps {
                bat 'yarn install'
                bat 'yarn build'
            }
        }

        stage('Run unit tests') {
            steps {
                bat 'yarn test'
                junit allowEmptyResults: true, keepLongStdio: true, testResults: 'unittest-sonar.xml'
            }
        }

        stage('Analyze SonarQube') {
            when {
                expression {
                    param.runSonarQube == true
                }
            }
            steps {
                echo "TBD"
            }
        }

        stage('Check quality gate') {
            when {
                expression {
                    param.runSonarQube == true
                }
            }
            steps {
                echo "TBD"
            }
        }
    }
}